{
  "apps": [{
    "name": "fitness-bot-ai",
    "script": "./src/index.js",
    "instances": 1,
    "exec_mode": "fork",
    "watch": false,
    "max_memory_restart": "1G",
    "env": {
      "NODE_ENV": "production"
    },
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "out_file": "./logs/out.log",
    "error_file": "./logs/error.log",
    "merge_logs": true,
    "restart_delay": 4000,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}
