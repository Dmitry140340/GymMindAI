# Environment Variables
# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username

# Coze API - для Workflows (ИИ-инструменты)
COZE_API_KEY=your_coze_api_key_here
COZE_BOT_ID=your_coze_bot_id_here
COZE_WORKFLOW_ID=your_default_workflow_id_here

# DeepSeek API - для ИИ-тренера
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-reasoner

# Отдельные Workflow ID для каждого ИИ-инструмента
COZE_DEEP_RESEARCH_WORKFLOW_ID=your_deep_research_workflow_id
COZE_TRAINING_PROGRAM_WORKFLOW_ID=your_training_program_workflow_id
COZE_NUTRITION_PLAN_WORKFLOW_ID=your_nutrition_plan_workflow_id
COZE_COMPOSITION_ANALYSIS_WORKFLOW_ID=your_composition_analysis_workflow_id

# YooKassa (Test credentials)
YOOKASSA_TEST_SHOP_ID=your_test_shop_id_here
YOOKASSA_TEST_SECRET_KEY=your_test_secret_key_here

# YooKassa (Production credentials) 
YOOKASSA_PROD_SHOP_ID=your_prod_shop_id_here
YOOKASSA_PROD_SECRET_KEY=live_your_prod_secret_key_here

# Payment mode: 'test' or 'production'
PAYMENT_MODE=production

# Server
PORT=3000
WEBHOOK_URL=https://yourdomain.com/webhook

# Database
DATABASE_PATH=./data/subscriptions.db

# Subscription prices (в рублях)
BASIC_PRICE=150
STANDARD_PRICE=300
PREMIUM_PRICE=450

# Admin user IDs (через запятую)
ADMIN_IDS=your_telegram_id_here
